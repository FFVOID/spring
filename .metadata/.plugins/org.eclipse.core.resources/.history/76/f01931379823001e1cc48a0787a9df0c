package com.museum.service;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.museum.dto.NewExDto;
import com.museum.entity.Exhibition;
import com.museum.repository.ExhibitionRepository;
import com.museum.repository.ItemImgRepository;

import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
@Transactional
public class ExhibitionService {
	
	private final ItemImgRepository itemRepository;
	private final ItemImgRepository itemImgRepository;
	private final ItemImgService itemImgService;
	private final ExhibitionRepository exRepository;
	
	public Long saveExhibition(NewExDto newExDto) throws Exception {
		
		Exhibition exhibition = newExDto.createEx(); // dto -> entity
		exRepository.save(exhibition); //저장
	}
	
	return exhibition.getId();
}
